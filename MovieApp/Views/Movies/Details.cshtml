@model MovieApp.Models.Movie
@{
    ViewBag.Title = "Details";
}
<h2 class="font-weight-bold">@Model.Name.ToUpper()</h2>
<hr />
<div class="row">
    <div class="col-md-4 col-lg-4">
        <img class="d-block mx-auto" src="data:image/jpg;base64,@Convert.ToBase64String(Model.Poster)" style="height:300px;width:200px;" />
    </div>
    <div class="col-md-8 col-lg-8">
        <div>
            <h6>Genre - @Model.Genre</h6>
            <h6>Release Date - @Model.ReleaseDate.ToString("d MMM yy")</h6>
            @if (Model.Price == 0)
            {
                <span class="badge badge-success p-2">Free</span>
            }
            else
            {
                <h5>₹@Model.Price</h5>
            }
            @if (Model.Availability == MovieApp.Models.Availability.Available)
            {
                <h5 class="text-success">Available</h5>
            }
            else
            {
                <h5 class="text-danger">Not Available</h5>
            }
            <br /><br />
            <div class="row">
                <div class="col-md-6 col-lg-6">
                    <a href="/Movies/EditMovie/@Model.Id" class="btn btn-outline-primary btn-block btn-sm">Edit</a>
                </div>
                <div class="col-md-6 col-lg-6">
                    <button data-toggle="modal" data-target="#exampleModalCenter" class="btn btn-danger btn-block btn-sm js-delete">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a href="/Movies/AllMovies" class="btn btn-link">Back to Home</a>
</div>
<hr />
<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Are you sure want to delete??</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h5>@Model.Name</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="/Movies/DeleteMovie/@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
